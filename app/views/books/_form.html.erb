<%= form_with(model: book, local: true) do |form| %>

<% if book.errors.any? %>
    <div>
      <h2><%= pluralize(book.errors.count, "error") %> Todos campos devem ser preenchidos</h2>
    </div>
  <% end %>

  <div>
    <%= form.label :title, 'Título' %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :author, 'Autora' %>
    <%= form.text_field :author %>
  </div>

  <div>
    <%= form.label :publication_year, 'Ano de publicação' %>
    <%= form.number_field :publication_year %>
  </div>

  <div>
    <%= form.label :abstract, 'Resumo' %>
    <%= form.text_field :abstract %>
  </div>

  <div>
    <%= form.label :genre, 'Gênero' %>
    <%= form.text_field :genre %>
  </div>

  <div>
    <%= form.submit 'Enviar' %>
  </div>
<% end %>