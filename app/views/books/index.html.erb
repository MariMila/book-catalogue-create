<h1>Livros</h1>

<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Autora</th>
      <th>Ano de publicação</th>
      <th>Resumo</th>
      <th>Genêro</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.publication_year %></td>
        <td><%= book.abstract %></td>
        <td><%= book.genre %></td>
        <td><%= link_to 'Mostrar', book %></td>
        <td><%= link_to 'Editar', edit_book_path(book) %></td>
        <td><%= link_to 'Destruir', book, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Registrar livro', new_book_path %>
